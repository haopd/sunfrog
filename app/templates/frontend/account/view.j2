{% extends "layouts/html.j2" %}
{% block page_body  %}
  <div>
    <blockquote>
      <h4>Quản lý tài khoản</h4>
    </blockquote>
  </div>
  {% include "_flashes.j2" %}
  <table>
    <thead>
    <tr>
      <th>Tên đăng nhập</th>
      <th>Tên tài khoản</th>
      <th>Trạng thái</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    {% for account in list_account %}
        <tr>
          <td>{{ account.username }}</td>
          <td>{{ account.email }}</td>
          <td>{{ account.status }}</td>
          <td>
            <div>
              <a href="{{ url_for('account/detail', acc_id = account.key.id()) }}"><i class="material-icons">info</i></a>
              <a href="{{ url_for('account/delete', acc_id = account.key.id()) }}"><i class="material-icons">delete_forever</i></a>
            </div>
          </td>
        </tr>
    {% endfor %}
    </tbody>
  </table>
  <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large" href="{{ url_for('account/add') }}">
      <i class="material-icons">person_add</i>
    </a>
  </div>
{% endblock %}